                                <TextBlock Grid.Column="3" Text="VGZ0003" Classes="admin-table-cell"/>
                                <TextBlock Grid.Column="4" Text="itorres@gonzalez.com" Classes="admin-table-cell"/>
                                <Border Grid.Column="5" 
                                        Background="#2196F3"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="Operador" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Espacio al final -->
                        <Border Height="20"/>

                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Grid>

        <!-- Mensaje informativo al final -->
        <Border Background="#E3F2FD"
                Padding="20"
                Margin="20"
                CornerRadius="8">
            <StackPanel Spacing="8">
                <TextBlock Text="ℹ️ Funcionalidad en desarrollo"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="#1976D2"/>
                <TextBlock Text="Los datos mostrados son ejemplos. Próximamente podrás agregar, editar y gestionar usuarios desde esta interfaz."
                           FontSize="13"
                           Foreground="#424242"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

    </StackPanel>

</UserControl>
