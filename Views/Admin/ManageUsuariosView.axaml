                            </Grid>
                        </Border>

                        <!-- Fila de datos 6 -->
                        <Border Classes="admin-table-row">
                            <Grid ColumnDefinitions="0.9*,1.1*,1*,1*,1.2*,0.8*">
                                <TextBlock Grid.Column="0" Text="javier_mora" Classes="admin-table-cell" FontWeight="Medium"/>
