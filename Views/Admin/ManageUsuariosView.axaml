                                <TextBlock Grid.Column="2" Text="Agencia Suárez" Classes="admin-table-cell"/>
                                <TextBlock Grid.Column="3" Text="AGS0002" Classes="admin-table-cell"/>
                                <TextBlock Grid.Column="4" Text="jmora@suarez.com" Classes="admin-table-cell"/>
                                <Border Grid.Column="5" 
                                        Background="#2196F3"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="Operador" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Fila de datos 7 -->
                        <Border Classes="admin-table-row">
                            <Grid ColumnDefinitions="0.9*,1.1*,1*,1*,1.2*,0.8*">
                                <TextBlock Grid.Column="0" Text="isabel_torres" Classes="admin-table-cell" FontWeight="Medium"/>
                                <TextBlock Grid.Column="1" Text="Isabel Torres" Classes="admin-table-cell"/>
