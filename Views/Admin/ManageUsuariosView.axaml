                                </Border>
                            </Grid>
                        </Border>

                        <!-- Fila de datos 5 -->
                        <Border Classes="admin-table-row">
                            <Grid ColumnDefinitions="0.9*,1.1*,1*,1*,1.2*,0.8*">
                                <TextBlock Grid.Column="0" Text="laura_fernandez" Classes="admin-table-cell" FontWeight="Medium"/>
                                <TextBlock Grid.Column="1" Text="Laura Fernández" Classes="admin-table-cell"/>
                                <TextBlock Grid.Column="2" Text="Travel World" Classes="admin-table-cell"/>
                                <TextBlock Grid.Column="3" Text="TWD0001" Classes="admin-table-cell"/>
                                <TextBlock Grid.Column="4" Text="lfernandez@travelworld.com" Classes="admin-table-cell"/>
                                <Border Grid.Column="5" 
                                        Background="#9C27B0"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="Admin" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
